<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context=".HomeFragments.SensorInfoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sensor label -->
            <TextView
                android:id="@+id/sensorLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MQ 135"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Sensor reading -->
            <TextView
                android:id="@+id/sensor1Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Reading"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sensor1BatteryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Battery Reading"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/viewDetailsButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="150dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sensor label -->
            <TextView
                android:id="@+id/sensorLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flame Sensor"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Sensor reading -->
            <TextView
                android:id="@+id/sensor2Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Reading"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/sensor2BatteryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Battery Reading"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- View details button on the right -->
        <Button
            android:id="@+id/viewDetailsButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details" />

    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="300dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sensor label -->
            <TextView
                android:id="@+id/sensorLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate Sensor"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Sensor reading -->
            <TextView
                android:id="@+id/sensor3Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Reading"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/sensor3BatteryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Battery Reading"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- View details button on the right -->
        <Button
            android:id="@+id/viewDetailsButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="450dp">

        <!-- Picture on the left -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sensor label -->
            <TextView
                android:id="@+id/sensorLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Label"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Sensor reading -->
            <TextView
                android:id="@+id/sensor4Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Reading"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sensor4BatteryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Battery Reading"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- View details button on the right -->
        <Button
            android:id="@+id/viewDetailsButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details" />



    </LinearLayout>


</FrameLayout>
